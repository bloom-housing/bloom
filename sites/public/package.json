{
  "name": "@bloom-housing/public",
  "version": "1.0.5",
  "description": "Public web app reference implementation for the Bloom affordable housing system",
  "main": "index.js",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect=9230' next -p ${NEXTJS_PORT:-3000}",
    "build": "next build",
    "cypress:open": "wait-on \"http-get://localhost:${PORT:-3100}/docs\" \"http-get://localhost:${PORT:-3000}\" && cypress open",
    "cypress:run": "wait-on \"http-get://localhost:${PORT:-3100}/docs\" \"http-get://localhost:${PORT:-3000}\" && cypress run",
    "test": "concurrently \"yarn dev:all\" \"yarn cypress:open\"",
    "test:headless": "concurrently \"yarn dev:all\" \"yarn cypress:run\"",
    "test:unit-tests": "yarn jest -w 1",
    "export": "next export",
    "start": "next start -p ${NEXTJS_PORT:-3000}",
    "dev:reseed-and-run-backend": "cd ../../backend/core && yarn db:reseed && yarn dev",
    "dev:server-wait": "wait-on \"http-get://localhost:${PORT:-3100}/docs\"  --httpTimeout 60000 --tcpTimeout 1500 -v --interval 15000 && yarn dev",
    "dev:all": "concurrently \"yarn dev:reseed-and-run-backend\" \"yarn dev:server-wait\""
  },
  "dependencies": {
    "@bloom-housing/ui-components": "^2.0.0-alpha.0",
    "autoprefixer": "^10.3.4",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "moment": "^2.29.1",
    "nanoid": "^3.1.12",
    "next": "^11.1.1",
    "next-plugin-custom-babel-config": "^1.0.2",
    "node-polyglot": "^2.4.0",
    "node-sass": "^4.14.1",
    "openapi-client-axios": "^3.6.2",
    "qs": "^6.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^6.15.5",
    "sass": "^1.41.1",
    "swr": "^0.5.5",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@2.2.10"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@next/bundle-analyzer": "^10.1.0",
    "@testing-library/dom": "^8.2.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/markdown-to-jsx": "^6.11.2",
    "@types/node": "^12.12.67",
    "@types/react": "^16.9.52",
    "concurrently": "^5.3.0",
    "cypress": "^4.12.1",
    "js-levenshtein": "^1.1.6",
    "next-transpile-modules": "^8.0.0",
    "postcss": "^7.0.35",
    "sass-loader": "^10.0.3",
    "tailwindcss-rtl": "^0.7.3",
    "typescript": "^3.9.7",
    "webpack": "^4.44.2"
  }
}
