{
  "name": "@bloom-housing/public",
  "version": "1.0.5",
  "description": "Public web app reference implementation for the Bloom affordable housing system",
  "main": "index.js",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect=9230' next -p ${NEXTJS_PORT:-3000}",
    "build": "next build",
    "test": "concurrently \"yarn dev\" \"cypress open\"",
    "test:headless": "concurrently \"yarn dev\" \"cypress run\"",
    "export": "next export",
    "start": "next start -p ${NEXTJS_PORT:-3000}",
    "dev:listings": "cd ../../backend/core && yarn dev",
    "dev:server-wait": "wait-on \"http-get://localhost:${PORT:-3100}/listings\"  --httpTimeout 60000 --tcpTimeout 1500 -v --interval 15000 && yarn dev",
    "dev:server-wait-cypress": "wait-on \"http-get://localhost:${PORT:-3100}/listings\" --httpTimeout 60000 --tcpTimeout 1500 -v --interval 15000 && yarn build && yarn start",
    "dev:all-cypress": "concurrently \"yarn dev:listings\" \"yarn dev:server-wait-cypress\"",
    "dev:all": "concurrently \"yarn dev:listings\" \"yarn dev:server-wait\""
  },
  "dependencies": {
    "@bloom-housing/ui-components": "^1.0.5",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "moment": "^2.29.1",
    "nanoid": "^3.1.12",
    "next": "^11.1.1",
    "next-plugin-custom-babel-config": "^1.0.2",
    "node-polyglot": "^2.4.0",
    "node-sass": "^4.14.1",
    "openapi-client-axios": "^3.6.2",
    "qs": "^6.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^6.15.5",
    "swr": "^0.5.5",
    "tailwindcss": "2.2.10"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^10.1.0",
    "@types/markdown-to-jsx": "^6.11.2",
    "@types/node": "^12.12.67",
    "@types/react": "^16.9.52",
    "concurrently": "^5.3.0",
    "cypress": "^4.12.1",
    "js-levenshtein": "^1.1.6",
    "next-transpile-modules": "^8.0.0",
    "postcss": "^8.3.6",
    "sass-loader": "^10.0.3",
    "typescript": "^3.9.7",
    "webpack": "^4.44.2"
  }
}
