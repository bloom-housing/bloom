{{#> layout_default }}
    
    <h1>{{t "t.hello"}} {{> user-name }}</h1>
    <table role="presentation" border="0" cellpadding="0" cellspacing="0">
        <tbody>
        <tr>
            <td align="left">
            <p>
                {{t "accountRemoval.courtesyText"}}
            </p>
            </td>
        </tr>
        </tbody>
    </table>
    {{#if signInUrl}}
        <table role="presentation" border="0" cellpadding="0" cellspacing="0">
            <tbody>
            <tr>
                <td align="center">
                <a
                    class="btn btn-primary"
                    href="{{ signInUrl }}"
                    target="_blank"
                    style="color:white"
                    >
                    {{t "accountRemoval.signIn"}}
                    </a
                >
                </td>
            </tr>
            </tbody>
        </table>
    {{/if}}
    <table role="presentation" border="0" cellpadding="0" cellspacing="0">
        <tbody>
        <tr>
            <td align="left">
            <p>
                {{t "header.logoTitle"}}
            </p>
            </td>
        </tr>
        </tbody>
    </table>

{{/layout_default }}
