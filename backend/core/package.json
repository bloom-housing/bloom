{
  "name": "@bloom-housing/backend-core",
  "version": "0.1.1",
  "description": "Listings service reference implementation for the Bloom affordable housing system",
  "author": "Marcin Jedras <marcin.jedras@exygy.com>",
  "private": true,
  "license": "GPL-3.0",
  "scripts": {
    "clean": "rimraf dist",
    "build": "rimraf dist && nest build",
    "start": "yarn run build && node dist/src/main",
    "dev": "nest start --watch",
    "debug": "nest start --debug --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/.bin/typeorm",
    "herokusetup": "node heroku.setup.js",
    "seed": "ts-node src/seed.ts"
  },
  "dependencies": {
    "@bloom-housing/core": "^0.1.1",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/common": "^7.1.0",
    "@nestjs/core": "^7.1.0",
    "@nestjs/platform-express": "^7.1.0",
    "@nestjs/typeorm": "^7.1.0",
    "dotenv": "^8.2.0",
    "jsonpath": "^1.0.2",
    "nanoid": "^3.1.7",
    "pg": "^8.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "ts-node": "^8.6.2",
    "typeorm": "^0.2.24",
    "typeorm-naming-strategies": "^1.1.0",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.10.1",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.1.0",
    "@types/express": "^4.17.6",
    "@types/node": "^12.12.39",
    "@types/supertest": "^2.0.8",
    "dotenv": "^8.2.0",
    "jest": "^25.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "^6.2.1",
    "tsconfig-paths": "^3.9.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": "12",
    "yarn": "^1.22"
  }
}
